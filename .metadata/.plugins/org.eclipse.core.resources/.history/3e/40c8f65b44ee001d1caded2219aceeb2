#            allowedHeaders:
#              - Content-Type
#            allowedMethods:
#              - GET
#              - POST
#              - PUT
#              - DELETE
      routes:
        - id: employee-service
          uri: lb://employee-service
          predicates:
            - Path=/employee/**
        - id: department-service
          uri: lb://department-service
          predicates:
            - Path=/department/**
        - id: organization-service
          uri: lb://organization-service
          predicates:
            - Path=/organization/**
